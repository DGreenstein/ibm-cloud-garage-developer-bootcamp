{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Create Toolchain Button",
    "description": "ibm cloud garage method developer bootcamp toolchain",
    "longDescription": "continuous integration/delivery",
    "type": "object",
    "properties": {
        "prod-region": {
            "description": "region",
            "type": "string"
        },
        "prod-organization": {
            "description": "organization",
            "type": "string"
        },
        "dev-space": {
            "description": "development instance",
            "type": "string"
        },
        "e2e-space": {
            "description": "functional testing instance",
            "type": "string"
        },
        "load-space": {
            "description": "load testing instance",
            "type": "string"
        },
        "qa-space": {
            "description": "QA instance",
            "type": "string"
        },
        "stage-space": {
            "description": "staging instance",
            "type": "string"
        },
        "prod-space": {
            "description": "production instance",
            "type": "string"
        },
        "application": {
            "description": "unique name of the cloud foundry application",
            "type": "string",
            "pattern": "\\S"
        }
    },
    "required": [
        "prod-region",
        "prod-organization",
        "dev-space",
        "e2e-space",
        "load-space",
        "qa-space",
        "stage-space",
        "prod-space",
        "application"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "table",
            "columnCount": 3,
            "widths": [
                "33%",
                "33%",
                "33%"
            ],
            "items": [
                {
                    "type": "label",
                    "title": "Cloud Foundry Application Name:"
                },
                {
                    "type": "label",
                    "title": "Region:"
                },
                {
                    "type": "label",
                    "title": "Organization:"
                },
                {
                    "type": "text",
                    "readonly": false,
                    "key": "application"
                },
                {
                    "type": "select",
                    "key": "prod-region"
                },
                {
                    "type": "select",
                    "key": "prod-organization"
                }
            ]
        },
        {
            "type": "table",
            "columnCount": 4,
            "widths": [
                "15%",
                "28%",
                "28%",
                "28%"
            ],
            "items": [
                {
                    "type": "label",
                    "title": ""
                },
                {
